<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SecConfHub.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SecConfHub.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SecConfHub.Desktop">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	
	<Grid ShowGridLines="True">

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition/>
			<ColumnDefinition Width="100"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="100"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.ColumnSpan="3"
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center">
			Мероприятия
		</Label>
		
		<ScrollViewer Grid.Column="1"
					  Grid.Row="1"
					  Background="AliceBlue">
			<StackPanel>

				<ListBox ItemsSource="{Binding Events}">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid ColumnDefinitions="200,10,*"
								  RowDefinitions="50,50,50,10">
								
								<Image Source="{Binding Photo}"
									   Grid.RowSpan="3"
									   Width="200"
									   Height="200"/>
								<TextBlock Grid.Column="2"
										   Text="{Binding Title}"/>
								<TextBlock Grid.Column="2"
										   Grid.Row="1"
										   Text="{Binding StartDate, StringFormat='начало: {0}'}"/>

								<StackPanel Orientation="Horizontal"
											Grid.Column="2" 
											Grid.Row="2">
									<TextBlock Text="{Binding Days, StringFormat='кол-во дней: {0}'}"/>
									<TextBlock Text="{Binding City, StringFormat='город: {0}'}"
											   Margin="10,0,0,0"/>
								</StackPanel>
								
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

			</StackPanel>
		</ScrollViewer>

	</Grid>

</Window>
